{
	"name": "youtube-webos",
	"version": "0.4.3",
	"description": "Ad-free YouTube app for webOS",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"build": "webpack --mode=production",
		"build:dev": "webpack --mode=development",
		"package": "ares-package -n dist",
		"deploy": "node tools/deploy.js",
		"inspect": "ares-inspect youtube.leanback.v4",
		"launch": "ares-launch youtube.leanback.v4",
		"manifest": "node tools/gen-manifest.cjs youtube.leanback.v4.manifest.json",
		"version": "node tools/sync-version.cjs && git add assets/appinfo.json",
		"prepare": "husky",
		"lint": "eslint",
		"type-check": "tsc -b",
		"prettier-check": "prettier --ignore-path .prettierignore --check ."
	},
	"repository": "github:webosbrew/youtube-webos",
	"license": "GPL-3.0-only",
	"bugs": "https://github.com/webosbrew/youtube-webos/issues",
	"homepage": "https://github.com/webosbrew/youtube-webos#readme",
	"dependencies": {
		"@babel/runtime-corejs3": "^7.28.0",
		"core-js-pure": "^3.43.0",
		"regenerator-runtime": "^0.14.1",
		"tiny-sha256": "^1.0.2",
		"whatwg-fetch": "^3.6.20"
	},
	"devDependencies": {
		"@babel/core": "^7.28.0",
		"@babel/plugin-transform-runtime": "^7.28.0",
		"@babel/plugin-transform-typescript": "^7.28.0",
		"@babel/preset-env": "^7.28.0",
		"@eslint/js": "^9.30.1",
		"@stylistic/eslint-plugin": "^5.1.0",
		"@types/babel__core": "^7.20.5",
		"@types/eslint": "^9.6.1",
		"@types/eslint__js": "^9.14.0",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/node": "^24.0.10",
		"@webos-tools/cli": "^3.2.1",
		"babel-loader": "^10.0.0",
		"babel-plugin-polyfill-corejs3": "^0.13.0",
		"babel-plugin-polyfill-regenerator": "^0.6.5",
		"copy-webpack-plugin": "^13.0.0",
		"css-loader": "^7.1.2",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-regexp": "^2.9.0",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"jiti": "^2.4.2",
		"lint-staged": "^16.1.2",
		"postcss": "^8.5.6",
		"postcss-load-config": "^6.0.1",
		"postcss-loader": "^8.1.1",
		"postcss-preset-env": "^10.2.4",
		"prettier": "^3.6.2",
		"style-loader": "^4.0.0",
		"typescript": "^5.8.3",
		"webpack": "^5.99.9",
		"webpack-cli": "^6.0.1"
	},
	"engines": {
		"node": ">=22.17.0"
	}
}
